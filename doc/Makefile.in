## doc/Makefile.in

## -- User-modifiable variables -- ##
srcdir		= @srcdir@
top_srcdir	= @top_srcdir@
subdir		= doc

## == The code below shouldn't need to be touched at all == ##

include ../Rules.mk

## -- Private variables -- ##
MAN		= ccze.1
DISTCLEANFILES	= ${MAN}
EXTRA_DIST	= ${MAN}.in

## -- Generic rules -- ##
all: ${MAN}

${MAN}: ${MAN}.in ${top_srcdir}/ChangeLog
	sed -e "s,@VERSION\@,${VERSION},g" \
	    -e "s,@sysconfdir\@,${sysconfdir},g" \
	    -e "s,@pkglibdir\@,${pkglibdir},g" \
	<${MAN}.in >${MAN}T && mv -f ${MAN}T ${MAN}

install: all
	${INSTALL} -d ${DESTDIR}${man1dir}
	${INSTALL_DATA} ${MAN} ${DESTDIR}${man1dir}/

uninstall:
	rm -f ${DESTDIR}${man1dir}/${MAN}
